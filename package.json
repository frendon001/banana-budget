{
  "name": "banana-budget",
  "version": "1.0.0",
  "private": true,
  "description": "Solving for banana budget problem.",
  "main": "index.js",
  "dependencies": {
    "@types/express": "^4.17.2",
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "moment": "^2.24.0",
    "nodemon": "^1.18.10",
    "path-parser": "^4.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-typescript": "^7.7.7",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "typescript": "^3.7.4"
  },
  "scripts": {
    "start": "node dist/index.js",
    "server": "npm run validate && nodemon dist/index.js",
    "client": "npm run start --prefix client",
    "test": "mocha --exit",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run build && npm install --prefix client && npm run build --prefix client",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "check-types": "tsc",
    "validate": "npm-run-all --parallel check-types check-format lint build",
    "build": "babel server --extensions .js,.ts,.tsx --out-dir dist"
  },
  "lint-staged": {
    "*.+(js|ts|tsx)": [
      "eslint"
    ],
    "**/*.+(js|json|ts|tsx)": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check-types && lint-staged && npm run build"
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/frendon001/banana-budget.git"
  },
  "author": "",
  "license": "ISC"
}
